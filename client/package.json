{
  "name": "connect-four",
  "version": "0.1.0",
  "private": true,
  "proxy": "http://localhost:3001",
  "dependencies": {
    "axios": "^1.1.3",
    "bootstrap": "^4.5.3",
    "firebase": "^8.6.2",
    "re-base": "^4.0.0",
    "react": "^16.14.0",
    "react-bootstrap": "^1.4.0",
    "react-dom": "^16.13.1",
    "react-router-dom": "^5.2.0",
    "react-scripts": "4.0.1",
    "short-unique-id": "^4.4.4",
    "socket.io-client": "^3.0.5"
  },
  "scripts": {
    "start": "rimraf .eslintcache && react-scripts start",
    "build": "react-scripts build",
    "test": "jest ./src/__tests__/unit_tests ./src/__tests__/functional_tests/ ./src/__tests__/integration_tests --watch --detectOpenHandles",
    "coverage": "npm run test -- --coverage --watchAll",
    "emulators": "firebase emulators:start",
    "e2eTest": "jest ./src/__tests__/e2e_tests/auth.test.js",
    "e2eCoverage": "nyc report --reporter=html --cwd='./src/__tests__/e2e_tests'",
    "eject": "react-scripts eject"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@apollo/react-testing": "^4.0.0",
    "@babel/core": "^7.12.13",
    "@babel/plugin-syntax-jsx": "^7.12.13",
    "@babel/plugin-transform-react-jsx": "^7.12.13",
    "@babel/preset-env": "^7.12.13",
    "@babel/preset-react": "^7.12.13",
    "@testing-library/jest-dom": "^5.12.0",
    "@testing-library/react": "^11.2.5",
    "@testing-library/user-event": "^12.6.3",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^26.6.3",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.6",
    "nyc": "^15.1.0",
    "puppeteer": "^9.1.1",
    "puppeteer-to-istanbul": "^1.4.0",
    "react-test-renderer": "^17.0.1"
  },
  "babel": {
    "env": {
      "test": {
        "presets": [
          "@babel/preset-react",
          "@babel/preset-env"
        ],
        "plugins": [
          "@babel/plugin-transform-modules-commonjs",
          "@babel/plugin-transform-react-jsx"
        ]
      }
    }
  }
}
